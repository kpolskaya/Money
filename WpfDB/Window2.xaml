                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBox  Height="20" Width="160"/>
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBox  Height="20" Width="160"/>
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBox  Height="20" Width="160"/>
                    </ListBoxItem>


                </ListBox>

                <StackPanel Orientation="Vertical" Grid.Row ="0" Grid.Column="0" HorizontalAlignment="Center"  VerticalAlignment="Center" >
                    <TextBlock  Text="Введите дату начала учета:" Height="20" Width="150" />
                    <DatePicker Name="bdate"  Height="25" Width="150" Text="Введите дату" />

                </StackPanel>

                <StackPanel Orientation="Vertical" Grid.Row ="0" Grid.Column="1" HorizontalAlignment="Center"  VerticalAlignment="Center" >
                    <TextBlock  Text="Введите остаток средств:" Height="20" Width="150" />
                    <TextBox Name="bsaldo" Height="25" Width="150" Text="Введите сумму" />

                </StackPanel>
                <Button Content="Записать" Grid.Column="2" HorizontalAlignment="Center"  VerticalAlignment="Center" Height="30" Width="150" Click="Button_Click"/>

            </Grid>

        
    </Grid>
</Window>
