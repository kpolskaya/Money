<Window x:Class="WpfDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDB"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="600" Width="800">
    <Grid Margin="0,0,0,-0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="23*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="date" 
                 HorizontalAlignment="Left" 
                 Height="23" 
                 Margin="319,14,0,0" 
                 TextWrapping="Wrap" 
                 Text="" 
                 VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <TextBox 
            x:Name="sum" 
            HorizontalAlignment="Left" 
            Height="23" Margin="319,58,0,0" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <TextBox 
            x:Name="optype" 
            HorizontalAlignment="Left" 
            Height="23" Margin="319,103,0,0" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <TextBox 
            x:Name="acc" 
            HorizontalAlignment="Left" 
            Height="23" Margin="319,149,0,0"
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <TextBox 
            x:Name="cat" 
            HorizontalAlignment="Left" 
            Height="23" Margin="319,195,0,0" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <TextBox 
            x:Name="note" 
            HorizontalAlignment="Left" 
            Height="23" Margin="319,238,0,0" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top" Width="270" Grid.ColumnSpan="2"/>
        <Button 
            Content="Save" 
            Grid.Column="1" 
            HorizontalAlignment="Left" 
            Margin="329,267,0,0" 
            VerticalAlignment="Top" Width="75"
            Click="Save_Click"/>
        <Label Content="Дата операции:" 
               HorizontalAlignment="Right" 
               Margin="0,11,118,0" 
               VerticalAlignment="Top"/>
        <Label Content="Сумма:" 
               HorizontalAlignment="Right"
               Margin="0,55,118,0" 
               VerticalAlignment="Top"/>
        <Label Content="Доход/расход?" 
               HorizontalAlignment="Right" 
               Margin="0,100,118,0" 
               VerticalAlignment="Top" Width="96"/>
        <Label Content="Счет:" 
               HorizontalAlignment="Right" 
               Margin="0,146,118,0" 
               VerticalAlignment="Top"/>
        <Label Content="Категория:" 
               HorizontalAlignment="Right" 
               Margin="0,192,118,0" 
               VerticalAlignment="Top" Width="69"/>
        <Label Content="Примечание:" 
               HorizontalAlignment="Right" 
               Margin="0,238,118,0" 
               VerticalAlignment="Top" Width="87"/>
        <ListView x:Name ="listView" HorizontalAlignment="Left" Height="267" Margin="10,292,0,0" VerticalAlignment="Top" Width="772" Grid.ColumnSpan="2">
            <ListView.View>
                <GridView>
                  
                    <GridViewColumn Header="Номер" DisplayMemberBinding="{Binding RecNumber}" Width="45"/>
                    <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding OpDate}" Width="80"/>
                    <GridViewColumn Header="Сумма" DisplayMemberBinding="{Binding Sum}" Width="100"/>
                    
                    <GridViewColumn Header="Счет" DisplayMemberBinding="{Binding Account}" Width="100" />
                    <GridViewColumn Header="Категория" DisplayMemberBinding="{Binding Category}" Width="130" />
                    <GridViewColumn Header="Примечание" DisplayMemberBinding="{Binding Note}" Width="315" />
                    
                </GridView>
                
            </ListView.View>
            
        </ListView>
        <Button  
                Content="Add" 
                Grid.Column="1" 
                HorizontalAlignment="Left" 
                Margin="329,238,0,0" 
                VerticalAlignment="Top" Width="75"
                Click="Add_Click"/>





    </Grid>
</Window>
